<Window x:Class="LabWork19.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabWork19"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="300" />
            </Grid.ColumnDefinitions>
            
            <ListBox Grid.Column="0" x:Name="FilesListBox" />
            
            <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center" Margin="20 0 20 0">
                <Button Content="Создать архив" Click="CreateArchiveButton_OnClick" Margin="5" />
                <Button Content="Разархивировать" Click="UnzipButton_OnClick" Margin="5" />
                <Button Content="Отркыть архив" Click="OpenArchiveButton_OnClick" Margin="5" />
                <Button Content="Добавить в архив" Click="AddToArchiveButton_OnClick" Margin="5" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
